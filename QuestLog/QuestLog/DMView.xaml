<UserControl x:Class="QuestLog.DMView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:QuestLog"
        mc:Ignorable="d"
        Height="600" Width="450">
    <UserControl.Resources>
        <Color x:Key="GreyE1">#FF181818</Color>
        <Color x:Key="GreyE2">#FF1C1C1C</Color>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource Background}"/>
        </Grid.Background>
        <ListView Width="400" Height="550" ItemsSource="{Binding}" ScrollViewer.CanContentScroll="False">
            <ListView.BorderBrush>
                <SolidColorBrush Color="#FF333333"/>
            </ListView.BorderBrush>
            <ListView.Background>
                <SolidColorBrush Color="{DynamicResource GreyE1}"/>
            </ListView.Background>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TreeView Width="386">
                        <TreeView.Background>
                            <SolidColorBrush Color="{DynamicResource GreyE2}"/>
                        </TreeView.Background>
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type src:Quest}" ItemsSource="{Binding Path=Subquests}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                            <DataTemplate DataType="{x:Type src:SubQuest}">
                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                            </DataTemplate>
                        </TreeView.Resources>
                        <TreeViewItem Header="{Binding Name}" ItemsSource="{Binding Subquests}" Foreground="White" FontFamily="Rockwell" FontSize="18"/>
                    </TreeView>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
